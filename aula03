01.// Configura as bibliotecas
02.# include <stdio.h>
03.# include <stdlib.h>
04. 
05.// Chama a função principal
06.int main()
07.{
08.    // Define as variaveis
09.    int i, total = 0;
10. 
11.    // Cria o loop
12.    for (i = 0; i <= 100; i++)
13.    {
14.        // Faz a conta
15.        total = total + i;
16.    }
17. 
18.    // Mostra resultado na tela
19.    printf("A soma de todos os numeros entre 1 e 100 eh %d \n", total);
20.    system ("pause"); 
21.}
